{{ attach_library('aries/molecule--modal') }}
{{ attach_library('aries/plugable--js--reveal') }}
{{ attach_library('aries/plugable--scss--reveal') }}
{% set resetOnClose = resetOnClose|default(0) != 0 ? 'true' : 'false' %}

<div class="reveal" id="{{ id }}" data-reveal data-reset-on-close="{{ resetOnClose }}">
  {# Modal Content #}
  <div class="molecule--modal--content">
    {{ modal_content }}
  </div>
  {# Close Button #}
  <button class="close-button" data-close aria-label="Close modal" type="button">
    <i class="icon icon-close"></i>
{#    <span class="material-symbols-outlined">close</span>#}
  </button>
</div>
