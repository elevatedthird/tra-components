{{ attach_library('aries/organism--disclaimer') }}
{{ attach_library('aries/plugable--scss--accordion') }}
{{ attach_library('aries/molecule--accordion-item') }}

<div class="organism--disclaimer grid-x grid-margin-x">
  <div class="accordion cell {{ disclaimer_expanded ? 'disclaimer-expand-' ~ disclaimer_expanded }} {{ narrow == 1 ? 'xlarge-10 xlarge-offset-1' : 'xlarge-12'}}" data-accordion data-allow-all-closed="true">
    {% set accordion_item_id = id ? id : title|render|striptags|trim|clean_class %}

    <div class="molecule--accordion-item accordion-item position-relative" data-accordion-item>
      {# Accordion Item Header #}
      {% if title %}
        <a href="#{{ accordion_item_id }}" class="molecule--accordion-item--header flex-container align-middle position-relative trim-bottom-margin material-symbols-outlined expand-more">
          <h2 class="molecule--accordion-item--title">
            {{ title }}
          </h2>
        </a>
      {% endif %}

      {# Accordion Item Content #}
      <div class="accordion-content" data-tab-content id="{{ accordion_item_id }}">
        {% if description|render %}
          <div class="molecule--accordion-item--description">
            {{ description }}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>
