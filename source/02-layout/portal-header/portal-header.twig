{{ attach_library('aries/layout--portal-header') }}
{{ attach_library('aries/plugable--js--sticky') }}
{{ attach_library('aries/plugable--scss--sticky') }}
<div class="layout--portal-header">
  <div id="header-content--wrapper" class="header-content--wrapper" data-sticky-container>
    <div class="header-content" data-sticky data-sticky-on="xsmall" data-margin-top="0"
        data-top-anchor="header-content--wrapper">
      <div class="grid-container header-content--inner-wrapper">
        {{ include('@molecule/site-branding/site-branding.twig', {logo, branding_no_link: (logo ? 1 : 0)}, with_context = false) }}
        <div class="menu">
          {% if registration_link %}
            <div>
              {{ registration_link|with(['#attributes', 'class'], 'button button--tertiary no-icon') }}
            </div>
          {% endif %}
          {% if login_link %}
            <div>
              {{ login_link|with(['#attributes', 'class'], 'button button--primary no-icon') }}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>
<div class="open-dropdown-menu-overlay" style="display:none;">
</div>
